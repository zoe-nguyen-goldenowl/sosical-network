<!DOCTYPE html>
<html>
  <head>
    <title>RailsBootstrap4Integration</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>  
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
    <link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />

  </head>

  <body>
    <div class="containers">
      <div class="row">
        <div class="col">
          <%if user_signed_in?%>
            <div class="top_menu">
              <div class="contain">
                <div class="row">
                  <div class="col-sm">
                    <nav class="navbar navbar-light ">
                      <form class="form-inline">
                        <input class="form-control mr-sm-2" type="search" placeholder="Search on facebook" aria-label="Search">
                        <button class="btn btn btn-primary my-2 my-sm-0" type="submit">Search</button>
                      </form>
                    </nav>
                  </div>

                  <div class="col-sm">
                    <div class="menu_top_center">
                     <i class="bi bi-house-door-fill" > <%link_to %></i>
                     <i class="bi bi-play-btn-fill"> <%link_to %></i>
                     <i class="bi bi-person-circle"> <%link_to %></i>
                     <i class="bi bi-chat-square-heart-fill"> <%link_to %></i>      
                    </div>
                  </div>

                  <div class="col-sm">
                    <div class="menu_top_left">
                      <div class="current_account btn">
                        <div class="img_user">
                          <i class="bi bi-person-bounding-box"></i>
                        </div>

                        <div class="name_user">
                          <%= current_user.first_name+" "+current_user.last_name%>
                        </div>
                      </div>
                      <button type="button" class="size_btn btn btn btn-light "><i class="bi bi-card-list"></i></button>
                      <button type="button" class="size_btn btn btn btn-light "><i class="bi bi-chat-dots"></i></button>
                      <button type="button" class="size_btn btn btn btn-light "><i class="bi bi-bell"></i></button>
                    </div>
                  </div>
                </div>
              </div>
            </div>  
          <%end%>
        </div>
      </div>

      <div class="row">
      <div class="col">
        <%if user_signed_in?%>
          <div class="content_left">
            <div class="current_account btn">
              <div class="img_user">
                <i class="bi bi-person-bounding-box"></i>
              </div>

              <div class="name_user">
                <%= current_user.first_name+" "+current_user.last_name%>
              </div>
            </div>  

            <ul class="menu_left">
              <li class="item_menu_left"><i class="bi bi-people" style="font-size: 23px; color: cornflowerblue;" ></i><%=link_to "Friends", friends_path%></li>
              <li class="item_menu_left"><i class="bi bi-clock-history" style="font-size: 23px; color: cornflowerblue;"></i><%=link_to "  Memories"%></li>
              <li class="item_menu_left"><i class="bi bi-camera-video" style="font-size: 23px; color: cornflowerblue;"></i><%=link_to " Watch"%></li>
              <li class="item_menu_left"><i class="bi bi-star" style="font-size: 23px; color: cornflowerblue;"></i><%=link_to " Farvorites"%></li>
            </ul> 
          </div>
        <%end%>
      </div>
      <div class="col">
        <% flash.each do |key, value| %>
          <div id="error_explanation">
            <div class="alert alert-#{key}">
              <%= value unless value.blank? %>
            </div>
          </div>
        <% end %>

        <div class="content_center">          
            <%= yield %>
        </div>
      </div>

      <div class="col">
        <%if user_signed_in?%>
          <div class="content_rigth">
            <div class="box_card">
              <div class="card" >
                <%=render "friends/form"%>
              </div>

            </div>

            <div class="box_add_friend">
            <%=render "users/user" %>         
            </div>

          </div>
        <%end%>  

      </div>
    </div>
  </body>
</html>
