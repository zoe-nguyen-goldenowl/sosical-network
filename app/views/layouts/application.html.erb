<!DOCTYPE html>
<html>
  <head>
    <title>FaceBook</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>  
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
    <link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;1,100;1,300;1,400;1,700&display=swap');
    </style> 
  </head>

  <body>
  <% flash.each do |key, value| %>
          <%if key=="error" || key=="alert"%>
            <div class="alert-danger box_flash" role="alert">
              <%=value%>
            </div>
          <%elsif key=="success"|| key=="notice"%>
            
              <div class=" alert-primary box_flash" role="alert">
                <%= value %>
              </div>
            
          <%end%>

        <% end %>
    <div class="container-fluid">

    <% if !user_signed_in? %>
      <div class="container-fluid">
        <%= yield%>
      </div>
      
    <%else%>
            
    <div class="row_menu_top menu_top shadow p-2 mb-1 bg-white rounded">

      <div class="col-sm-4 col-md-4 col-lg-4">
        <div class="menu_top_center">
 
         <%= link_to '<i class="bi bi-house-door-fill" style="font-size: 2rem; color: cornflowerblue;" ></i>'.html_safe, posts_path, class: "icon_menu_top" %>
         <%= link_to '<i class="bi bi-play-btn-fill" style="font-size: 2rem; color: cornflowerblue;"></i>'.html_safe, posts_path, class: "icon_menu_top" %>
         <%= link_to '<i class="bi bi-person-circle" style="font-size: 2rem; color: cornflowerblue;"></i>'.html_safe, user_detail_path(current_user.id), class: "icon_menu_top" %>
      
        </div>
      </div>

      <div class="col-sm-2 col-md-3 col-lg-3">
        <!-- Button trigger modal -->
        <button type="button" class="btn btn_create_size btn-primary btn-sm" data-toggle="modal" data-target="#exampleModal">
          New posts
        </button>
      </div>

      <div class="col-sm-4 col-md-5  col-lg-5">
        <div class="menu_top_left">
          <div class="current_account btn">
            <div class="img_user">
              <i class="bi bi-person-bounding-box" style="font-size: 22px; color: cornflowerblue;"></i>
            </div>

            <div class="name_user">
              <%= current_user.first_name+" "+current_user.last_name%>
            </div>
          </div>
          <button type="button" class="size_btn btn btn btn-light "><i class="bi bi-bell" style="font-size: 23px; color: cornflowerblue;"></i></button>
          
          <button type="button" class=" size_btn btn btn btn-light " data-toggle="dropdown"><i class="bi bi-card-list" style="font-size: 23px; color: cornflowerblue;"></i></button>

            <div class="dropdown-menu">
              <li class="item_menu_left"><i class="bi bi-people" style="font-size: 23px; color: cornflowerblue;" ></i><%=link_to "  Friends", friends_path, class:"icon_menu_left"%></li>
              <li class="item_menu_left"><i class="bi bi-card-list" style="font-size: 23px; color: cornflowerblue;"></i><%=link_to " Reques friends",  show_friend_path, class:"icon_menu_left"%></li>             
              <li class="item_menu_left"><i class="bi bi-clock-history" style="font-size: 23px; color: cornflowerblue;"></i><%=link_to "  Memories",friends_path, class:"icon_menu_left"%></li>
              <li class="item_menu_left"><i class="bi bi-camera-video" style="font-size: 23px; color: cornflowerblue;"></i><%=link_to " Watch",friends_path, class:"icon_menu_left"%></li>             
              <li class="item_menu_left"><i class="bi bi-box-arrow-left" style="font-size: 23px; color: cornflowerblue;"></i><%=link_to " Log out",destroy_user_session_path,:method => :delete, class:"icon_menu_left" %></li>

            </div>
          </li>
        </div>
      </div>
    </div>

      <div class="row">
      <div class=" col-md-2  col-lg-2">
        
        <div class="content_left shadow p-2 mb-1 bg-white rounded">
          <div class="current_account btn">
            <div class="img_user">
              <i class="bi bi-person-bounding-box" style="font-size: 23px; color: cornflowerblue;"></i>
            </div>

            <div class="name_user">
              <%= current_user.first_name+" "+current_user.last_name%>
            </div>
          </div>  

          <ul class="menu_left">
            <li class="item_menu_left"><i class="bi bi-people" style="font-size: 23px; color: cornflowerblue;" ></i><%=link_to "  Friends", friends_path, class:"icon_menu_left"%></li>
            <li class="item_menu_left"><i class="bi bi-clock-history" style="font-size: 23px; color: cornflowerblue;"></i><%=link_to "  Memories",friends_path, class:"icon_menu_left"%></li>
            <li class="item_menu_left"><i class="bi bi-camera-video" style="font-size: 23px; color: cornflowerblue;"></i><%=link_to " Watch",friends_path, class:"icon_menu_left"%></li>
            <li class="item_menu_left"><i class="bi bi-star" style="font-size: 23px; color: cornflowerblue;"></i><%=link_to " Farvorites",friends_path, class:"icon_menu_left" %></li>
            <li class="item_menu_left"><i class="bi bi-box-arrow-left" style="font-size: 23px; color: cornflowerblue;"></i><%=link_to " Log out",destroy_user_session_path,:method => :delete, class:"icon_menu_left" %></li>
          </ul> 
        </div>
        
      </div>
      <div class=" col-md-7 col-lg-7">
        <div class="content_center">          
            <%= yield %>
        </div>
        
      </div>

      <div class=" col-md-3 col-lg-3">
        <div class="content_rigth shadow p-2 mb-1 bg-white rounded">
            <div class="box_card">
              <div class="card">
                <%=render "friends/form"%>
              </div>
            </div>
          <div class="box_add_friend">
          <%=render "users/user" %>         
          </div>

        </div>
      </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">New posts</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <%= form_with model: @post, method: :post, local: false do |f| %>
              <div class="field">
                <%= f.text_area :content, placeholder: "Create content post ..." %>
              </div>

              <span class="picture">
                <%= f.file_field :image %>
              </span>
              <%= f.button "Post", class:"btn btn-primary"%>
            <%end%>
          </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
      </div>
    </div>

  <% end %>
  </body>
</html>
